<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="560px"
            android:background="@drawable/card_bg"
            android:id="@+id/head_layout"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="170px"
            android:layout_height="170px"
            android:id="@+id/user_head_icon"
            android:src="@drawable/photo"
            android:layout_marginLeft="65px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150px"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:text="淫荡的老橙子"
                android:layout_toRightOf="@id/user_head_icon"
                android:textColor="#fff"
                android:textSize="45px"
                android:layout_marginTop="310px"
                android:layout_marginLeft="70px"
                />
            <ImageView
                android:layout_width="65px"
                android:layout_height="65px"
                android:id="@+id/user_sex"
                android:background="@drawable/female"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50px"
                android:layout_marginTop="305px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_signatrue"
                android:text="编辑个性签名"
                android:textSize="40px"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="75px"
                android:layout_marginBottom="40px"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1380px"
            android:id="@+id/body_layout"
            android:layout_below="@id/head_layout"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:id="@+id/attention"
                >
                <ImageView
                    android:layout_width="73px"
                    android:layout_height="73px"
                    android:background="@drawable/my_takecare"
                    android:id="@+id/attention_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="75px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textSize="41px"
                    android:textColor="#000"
                    android:id="@+id/attention_text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/attention_icon"
                    android:layout_marginLeft="25px"
                    />
                <ImageView
                    android:layout_width="60px"
                    android:layout_height="70px"
                    android:background="@drawable/rightjiantou"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45px"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:id="@+id/collect"
                >
                <ImageView
                    android:layout_width="73px"
                    android:layout_height="73px"
                    android:background="@drawable/my_collection"
                    android:id="@+id/collect_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="75px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textSize="41px"
                    android:textColor="#000"
                    android:id="@+id/collect_text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/collect_icon"
                    android:layout_marginLeft="25px"
                    />
                <ImageView
                    android:layout_width="60px"
                    android:layout_height="70px"
                    android:background="@drawable/rightjiantou"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45px"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:id="@+id/search_friends"
                >
                <ImageView
                    android:layout_width="73px"
                    android:layout_height="73px"
                    android:background="@drawable/search_friend"
                    android:id="@+id/search_friends_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="75px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textSize="41px"
                    android:textColor="#000"
                    android:id="@+id/search_friends_text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/search_friends_icon"
                    android:layout_marginLeft="25px"
                    />
                <ImageView
                    android:layout_width="60px"
                    android:layout_height="70px"
                    android:background="@drawable/rightjiantou"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45px"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:id="@+id/messagers"
                >
                <ImageView
                    android:layout_width="73px"
                    android:layout_height="73px"
                    android:background="@drawable/messages"
                    android:id="@+id/messagers_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="75px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textSize="41px"
                    android:textColor="#000"
                    android:id="@+id/messagers_text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/messagers_icon"
                    android:layout_marginLeft="25px"
                    />
                <ImageView
                    android:layout_width="60px"
                    android:layout_height="70px"
                    android:background="@drawable/rightjiantou"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45px"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:id="@+id/night_mode"
                android:layout_marginTop="475px"
                >
                <ImageView
                    android:layout_width="73px"
                    android:layout_height="73px"
                    android:background="@drawable/night_colse"
                    android:id="@+id/night_icons"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="75px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间模式"
                    android:textSize="41px"
                    android:textColor="#000"
                    android:id="@+id/night_text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/night_icons"
                    android:layout_marginLeft="25px"
                    />
                <RelativeLayout
                    android:layout_width="160px"
                    android:layout_height="75px"
                    android:id="@+id/toggle_button"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="65px"
                    >
                <TextView
                    android:layout_width="145px"
                    android:layout_height="75px"
                    android:id="@+id/toggle_button_back"
                    android:background="@drawable/toggle_back"
                    />
                    <TextView
                        android:layout_width="67px"
                        android:layout_height="67px"
                        android:id="@+id/toggle_btn_shape"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="85px"
                        android:background="@drawable/toggle_shape"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:id="@+id/foot_layout"
            android:layout_below="@id/body_layout"
            android:orientation="horizontal"
            >
           <RelativeLayout
               android:layout_width="0px"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:id="@+id/my_production"
               >
               <ImageView
                   android:layout_width="75px"
                   android:layout_height="75px"
                   android:background="@drawable/directory"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/production_icon"
                   android:layout_marginTop="15px"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我的作品"
                   android:textColor="#000"
                   android:textSize="37px"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/production_text"
                   android:layout_marginBottom="15px"
                   />
           </RelativeLayout>
            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/my_settings"
                >
                <ImageView
                    android:layout_width="75px"
                    android:layout_height="75px"
                    android:background="@drawable/settings"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/settings_icon"
                    android:layout_marginTop="15px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="#000"
                    android:textSize="37px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/settings_text"
                    android:layout_marginBottom="15px"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>